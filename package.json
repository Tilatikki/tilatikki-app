{
  "name": "tilatikki-server",
  "version": "1.0.0",
  "description": "Server component of the tilatikki-app",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "setup:project": "npm install && tsc && cd client && npm install && npm run build",
    "tsc": "tsc -w",
    "server:dev": "nodemon build/index.js --ignore client",
    "client:dev": "npm run dev --prefix client",
    "start:dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \" npm run server:dev\" \" npm run client:dev\"",
    "docker:build": "cd build && node index.js",
    "docker:img": "docker build -t tilitikki .",
    "docker:run": "docker run -p 5000:5000 tilitikki"
  },
  "author": "",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongoose": "^5.11.97",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "winston": "^3.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./tests/teardown.js"
  },
  "directories": {
    "client": "client"
  }
}
