{
  "name": "tilatikki-server",
  "version": "1.0.0",
  "description": "Server component of the tilatikki-app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup:project": "npm install && cd client && npm install && npm run build",
    "test:server": "vitest --reporter=verbose",
    "test:client": "cd client && npm run test",
    "test": "npm run test:server && npm run test:client",
    "build": "tsc",
    "lint:server": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:client": "cd client && npm run lint",
    "lint": "npm run lint:server && npm run lint:client",
    "dev": "tsx watch server/index.ts",
    "start": "node build/index.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "nodemailer": "^6.9.7",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6",
    "winston": "^3.11.0"
  }
}
