{
  "name": "tilatikki-server",
  "version": "1.0.0",
  "description": "Server component of the tilatikki-app",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "setup": "npm install && tsc && npm run install-client && npm run build-client",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "server-build": "tsc -w",
    "server": "nodemon build/index.js --ignore client",
    "client-dev": "npm run dev --prefix client",
    "client-prod": "npm run prod --prefix client",
    "start-prod": "cross-env NODE_ENV=production concurrently --kill-others-on-fail \" npm run server\" \" npm run client-prod\"",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \" npm run server\" \" npm run client-dev\""
  },
  "author": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "cross-env": "^7.0.3",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "concurrently": "^7.6.0",
    "winston": "^3.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./tests/teardown.js"
  }
}
